{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Clean Metals",
			"type": "shell",
			"command": "del .bloop /s /q && del .metals /s /q",
			"presentation": {
				"reveal": "always",
				"clear": true,
				"panel": "shared"
			},
			"options": {"cwd": "${workspaceFolder}/"}
		},
		{
			"label": "Test sparkcql",
			"type": "shell",
			"group": "build",
			"command": "python",
			"args": ["-m", "pytest", "-k", "test_literal_definitions"],
			"presentation": {
				"reveal": "always",
				"clear": true,
				"panel": "shared"
			},
			"options": {"cwd": "${workspaceFolder}/sparkcql"}
		},
		{
			"label": "Build CQL Scripts",
			"type": "shell",
			"group": "build",
			"command": "TODO",
			"args": ["cql", "compile", "--input=./src/test/resources"],
			"presentation": {
				"reveal": "always",
				"clear": true,
				"panel": "shared"
			},
			"options": {"cwd": "${workspaceFolder}"}
		},
		{
			"label": "Generate Model Classes",
			"type": "shell",
			"group": "build",
			"command": "generate-models.bat",
			"presentation": {
				"reveal": "always",
				"clear": true,
				"panel": "shared"
			},
			"options": {"cwd": "${workspaceFolder}/generator"}
		}		
	]
}